generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("SUPABASE_DB_URL")
  directUrl = env("SUPABASE_DIRECT_URL")
}

model User {
  id        String   @id // Supabase Auth ID
  email     String   @unique
  role      Role     @default(FREE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  FREE
  PAID
  ADMIN
}

model Source {
  id        String   @id @default(uuid())
  url       String   @unique
  name      String
  tier      Role     @default(FREE)
  type      String   // rss, youtube, podcast
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  items     ContentItem[]

  @@map("sources")
}

model ContentItem {
  id          String   @id @default(uuid())
  title       String
  url         String   @unique
  summary     String?
  content     String?  // Raw content or transcript
  score       Int?     // Total Score 0-100
  
  // Granular AI Scores
  insightDensity Int?
  conceptualDepth Int?
  originality Int?
  evidenceScore Int?
  clarity Int?
  alignment Int?
  scoreBand String?

  publishedAt DateTime
  sourceId    String
  source      Source   @relation(fields: [sourceId], references: [id])
  createdAt   DateTime @default(now())

  @@map("content_items")
}
